                Text="เพิ่มสินค้า"
                HorizontalTextAlignment="Center"/>


           <Label
                Text="ประเภทรถ" />
            <Picker
                x:Name="tyepPicker"
                Title="เลือกหมวดสินค้า"/>

            <Label
                Text="ยี่ห้อ" />
            <Picker
                x:Name="brandPicker"
                Title="เลือกหมวดสินค้า"/>

            <Label
                Text="รุ่น" />
            <Entry
                x:Name="productNameEntry" />

            <Label
                Text="ปี"
                />
                <Entry

                        x:Name="YearStepper"/>
