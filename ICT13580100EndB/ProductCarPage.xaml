                x:Name="detailsEntry" 
                HeightRequest="100"
                                  />

            <Label
                Text="ราคา" />
            <Entry
                x:Name="priceEntry" />

            <Label
                Text="จังหวัด" />

            <Picker
                x:Name="provincePicker"
                Title="เลือกหมวดสินค้า"/>

            <Label
                Text="เบอร์โทร" />
            <Entry
                x:Name="tellEntry" />

    
            <Button
                x:Name="saveButton"
                Text="ตกลง"
                BackgroundColor="Silver"/>

            <Button
                x:Name="cancelButton"
                Text="ยกเลิก"
                BackgroundColor="Red"/>


            
                


        </StackLayout>


    </ScrollView>

    
</ContentPage>
